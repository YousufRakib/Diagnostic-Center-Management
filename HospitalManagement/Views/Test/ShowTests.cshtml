@using PagedList.Mvc
@model  PagedList.IPagedList<HospitalManagement.Model.Model.Test>
@{
    Layout = "~/Views/Master View/_Layout.cshtml";
}

<div class="page-wrapper">
    <div class="content">
        <div class="row">
            <div class="col-sm-5 col-5">
                <h4 class="page-title">Tests</h4>
            </div>
            <div class="col-sm-7 col-7 text-right m-b-30">
                <div class="btn btn-rounded">@Html.ActionLink("Add Test", "AddTest")</div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="table-responsive">
                    <table class="table table-striped custom-table mb-0 datatable">
                        <thead>
                        <tr>
                            <th>S1</th>
                            <th>Category Name</th>
                            <th>Test Name</th>
                            <th>Unit</th>
                            <th>Reference Range</th>
                            <th>Test Price</th>
                            <th>Test Room</th>
                            <th>Test Delivery After</th>
                            <th class="text-right">Action</th>
                        </tr>
                        </thead>
                        @{ int serial = 1;}
                        @foreach (var test in Model)
                        {
                            <tbody>
                                <tr>
                                    <td>@(serial++)</td>
                                    <td>@test.CategoryId</td>
                                    <td>@test.testName</td>
                                    <td>@test.unit</td>
                                    <td>@test.referenceRange</td>
                                    <td>@test.price</td>
                                    <td>@test.testRoom</td>
                                    <td>@test.deliveryDays <p>days</p></td>       
                                    <td class="text-right">
                                        <div class="dropdown dropdown-action">
                                            <a href="#" class="action-icon dropdown-toggle" data-toggle="dropdown" aria-expanded="false"><i class="fa fa-ellipsis-v"></i></a>
                                            <div class="dropdown-menu dropdown-menu-right">
                                                <div class="dropdown-item">@Html.ActionLink("Edit", "Edit", new { id =test.id })</div>
                                                <div class="dropdown-item">@Html.ActionLink("Delete", "Delete", new { id = test.id })</div>
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                            </tbody>
                        }

                    </table>
                </div>
                <div class="pagination" style="margin-left: 400px">

                    Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber)

                    of @Model.PageCount   @Html.PagedListPager(Model, page => Url.Action("ShowTests", new { page }))

                </div>
                
            </div>
        </div>
    </div>
</div>