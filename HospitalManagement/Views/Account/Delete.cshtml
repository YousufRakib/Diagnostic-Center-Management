@model HospitalManagement.Model.Model.Account
@{
    Layout = "~/Views/Master View/_Layout.cshtml";
}

<div class="page-wrapper">
    @using (Html.BeginForm())
    {
        <div class="content">
            <div class="row">
                <div class="col-lg-8 offset-lg-2">
                    <h4 class="page-title">Delete/Inactive Test</h4>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-8 offset-lg-2">
                    <form>
                        @Html.HiddenFor(model => model.id)
                        @Html.HiddenFor(model => model.reason)
                        @Html.HiddenFor(model => model.type)
                        @Html.HiddenFor(model => model.amount)
                        @Html.HiddenFor(model => model.date)
                        @Html.HiddenFor(model => model.EmployeeId)
                        <div class="m-t-20 text-center">
                            <h3>Are you sure want to inactive/delete this role?</h3>
                            <input class="btn btn-primary submit-btn" type="submit" value="Save" />
                        </div>
                        <div class="col-md-12">
                            <div class="form-group form-focus">
                                @if (ViewBag.Message != null)
                                {
                                    <h3>
                                        <b>
                                            @ViewBag.Message;
                                        </b>
                                    </h3>
                                }
                            </div>
                        </div>
                    </form>
                    <div>
                        @Html.ActionLink("Back", "ShowAccounts")
                    </div>
                </div>
            </div>
        </div>
    }
</div>











